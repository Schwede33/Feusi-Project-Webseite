{
  "compilerOptions": {
    /* === Grundsetup === */
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react-jsx",
    /* === Next.js & Bundler === */
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* === TypeScript Verhalten === */
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "incremental": true,
    /* === Pfad-Aliase (WICHTIG) === */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    /* === Type Definitions === */
    "typeRoots": [
      "./node_modules/@types"
    ],
    /* === Next.js Plugin === */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  /* === Dateien, die TypeScript beachten soll === */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  /* === Ausschl√ºsse === */
  "exclude": [
    "node_modules"
  ]
}
